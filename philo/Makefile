#------------------------------------------------------------------------------#
#--------------                       PRINT                       -------------#
#------------------------------------------------------------------------------#

BLACK := \033[90m
RED := \033[31m
G := \033[32m
Y := \033[33m
B := \033[34m
M := \033[35m
CYAN := \033[36m
X := \033[0m

SUCCESS := \n$(M)\
████████████████████████████████████████████████████████████████████████████████████████████████████$(X)\n\
$(X)\n\
███████  █     █  █  █        ███████  ███████  ███████  ███████  █     █  ███████  ███████  ███████$(X)\n\
█     █  █     █  █  █        █     █  █        █     █  █     █  █     █  █        █     █  █      $(X)\n\
███████  ███████  █  █        █     █  ███████  █     █  ███████  ███████  ████     ███████  ███████$(X)\n\
█        █     █  █  █        █     █        █  █     █  █        █     █  █        █   █          █$(X)\n\
█        █     █  █  ███████  ███████  ███████  ███████  █        █     █  ███████  █    ██  ███████$(X)\n\
$(X)\n\
$(M)████████████████████████████████████████████████████████████████████████████████████████████████████$(X)\n\

#------------------------------------------------------------------------------#
#--------------                      GENERAL                      -------------#
#------------------------------------------------------------------------------#

NAME=philo

#------------------------------------------------------------------------------#
#--------------                       FLAGS                       -------------#
#------------------------------------------------------------------------------#

CC=cc
CFLAGS=-Wall -Wextra -Werror
LDFLAGS=

ifeq ($(DEBUG), 1)
	CFLAGS += -fsanitize=address -g
endif

DEPFLAGS=-MMD -MP

#------------------------------------------------------------------------------#
#--------------                        DIR                        -------------#
#------------------------------------------------------------------------------#

OBJ_DIR := ./obj
DEP_DIR := $(OBJ_DIR)/.deps
INC_DIRS := .
SRC_DIRS := .

vpath %.c $(SRC_DIRS)
vpath %.h $(INC_DIRS)
vpath %.d $(DEP_DIR)

#------------------------------------------------------------------------------#
#--------------                        SRC                        -------------#
#------------------------------------------------------------------------------#

SRCS=	philo.c \
		dinner.c \
		dinner2.c \
		dinner3.c \
		dinner4.c \
		dinner5.c \
		helpers.c \
		helpers2.c \
		helpers3.c \
		helpers4.c \
		monitor.c \
		inputval.c \
		inputval2.c \

#------------------------------------------------------------------------------#
#--------------                      OBJECTS                      -------------#
#------------------------------------------------------------------------------#

OBJECTS := $(addprefix $(OBJ_DIR)/, $(SRCS:%.c=%.o))

#------------------------------------------------------------------------------#
#--------------                      COMPILE                      -------------#
#------------------------------------------------------------------------------#

.PHONY: all clean fclean re

all: $(NAME)

-include $(OBJECTS:.o=.d)

$(OBJ_DIR)/%.o: %.c
	@mkdir -p $(@D)
	@$(CC) $(CFLAGS) $(DEPFLAGS) -c $< -o $@

$(NAME): $(OBJECTS)
	@$(CC) -o $@ $^ $(LDFLAGS)
	@echo "$(SUCCESS)"

clean:
	@rm -rf $(OBJ_DIR)
	@echo "$(RED)objects deleted$(X)"

fclean: clean
	@rm -f $(NAME)
	@echo "$(RED)philo binaries deleted$(X)"

re: fclean all
